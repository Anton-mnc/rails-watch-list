<h2><%= @list.name %></h2>
<h4>Movies </h4>
<ul><%@list.movies.each do |movie| %>
<li><%=  movie.title %></li>
<% end %>
</ul>
<%= cl_image_tag(@list.photo.key, width: 400, height: 300, crop: :fill) %>
<h4>Bookmarks</h4>
<ul><%@list.bookmarks.each do |bookmark|  %>
  <li><%= bookmark.comment %> <%= link_to "Delete Bookmark", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-success" %></li>
  <% end %>
</ul>
</ul>
<%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: "btn btn-success" %>
<%= link_to "Back to lists", lists_path, class: "btn btn-success" %>
